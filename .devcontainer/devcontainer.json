{
    "build": { "dockerfile": "../Dockerfile.dev" },
	"forwardPorts": [
		8000
	],
	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"ms-vscode.makefile-tools"
			]
		}
	},
	"settings": { 
        // "terminal.integrated.shell.linux": "/usr/bin/fish"
        "terminal.integrated.defaultProfile.linux": "fish", 
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "/usr/bin/fish"
            },
        }
    }
}